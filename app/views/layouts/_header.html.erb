<header class="header">
  <div class="container-fluid bg-img">
    <div class="row">
      <h1 class="col-3 my-4">
        <%= link_to root_path do %>
          <%= image_tag 'NAGANOCAKE6.jpg', size: '320x64', alt: "ながのケーキのアイコン", class: "ml-5" %>
        <% end %>
      </h1>
        <div class="col d-flex align-items-center justify-content-center">
          <% if customer_signed_in? %>
            <p class="py-2 px-3 border rounded-pill bg-light">ようこそ、<strong><%= current_customer.last_name %></strong>さん！</p>
          <% end %>
        </div>

      <div class="col m-2">

        <% if admin_signed_in? %>
          <div class="d-flex justify-content-end text-white header-button">
            <%= link_to '商品一覧', admin_items_path, class: "header-btn m-2 py-2 px-3" %>
            <%= link_to '会員一覧', admin_customers_path, class: "header-btn m-2 py-2 px-3" %>
            <%= link_to '注文履歴一覧', admin_orders_path, class: "header-btn m-2 py-2 px-3" %>
            <%= link_to 'ジャンル一覧', admin_genres_path, class: "header-btn m-2 py-2 px-3" %>
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "header-btn m-2 py-2 px-3" %>
          </div>
        <% elsif customer_signed_in? %>
          <div class="d-flex justify-content-end text-white header-button">
            <%= link_to 'マイページ', customers_my_page_path, class: "header-btn m-2 py-2 px-3" %>
            <%= link_to '商品一覧', items_path, class: "header-btn m-2 py-2 px-3" %>
            <%= link_to 'カート', cart_items_path, class: "header-btn m-2 py-2 px-3" %>
            <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "header-btn m-2 py-2 px-3" %>
          </div>
        <% else %>
          <div class="d-flex justify-content-end text-white header-button">
            <%= link_to 'About', about_path, class: "header-btn m-2 py-2 px-3" %>
            <%= link_to '商品一覧', items_path, class: "header-btn m-2 py-2 px-3" %>
            <%= link_to '新規登録', new_customer_registration_path, class: "header-btn m-2 py-2 px-3" %>
            <%= link_to 'ログイン', new_customer_session_path, class: "header-btn m-2 py-2 px-3" %>
          </div>
        <% end %>

        <div class="seach text-right m-2">
          <div>
            <% if admin_signed_in? %>
              <%= form_with url: admin_search_path, method: :get do |f| %>
                <%= f.radio_button :search_obj, :customers, checked: "checked", value: "customers", class: "cursor"%>
                <%= f.label :search_obj_customers, "ユーザー", class: "cursor" %>
                <%= f.radio_button :search_obj, :items, value: "items", class: "cursor" %>
                <%= f.label :search_obj_items, "商品", class: "cursor" %>
                <%= f.text_field :keyword, placeholder: " 検索" %>
                <%= button_tag type: "submit", class: "btn-light" do %>
                  <i class="fas fa-search"></i>
                <% end %>
              <% end %>
            <% else %>
              <%= form_with url: search_path, method: :get do |f| %>
                <%= f.text_field :keyword, placeholder: " 商品検索" %>
                <%= button_tag type: "submit", class: "btn-light" do %>
                  <i class="fas fa-search"></i>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
  <div class="container-fluid reas-bg">
  </div>
</header>