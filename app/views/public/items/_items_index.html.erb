<div class="d-flex flex-wrap">
  <% items.each do |item| %>
    <%= link_to item_path(item), class: "w-25 pt-3 col-12 col-md-6 col-lg-3 text-dark text-decoration-none color-orange border item-border", local: true do %>
      <%= image_tag item.image_convert_for_index, size: '192x108', style: "object-fit: cover;" , class: "d-block mx-auto" %>
      <div class="card-body">
        <p class="card-title"><%= item.name %></p>
        <p class="card-subtitle">ï¿¥<%= number_with_precision(item.with_tax_price, precision: 0, delimiter: ',') %></p>
      </div>
    <% end %>
  <% end %>
</div>