<div class="container">
  <div class="row">
    <h3>配送先登録・一覧</h3>
    <%= render 'form', address: @address %>
  </div>
  <div class="row">
    <table class="table">
      <% @address.each do |a| %>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= a.postal_code %></td>
          <td><%= a.address %></td>
          <td><%= a.name %></td>
          <td>
            <%= button_to "編集する",edit_address_path(a), class: "btn btn-success" %>
            <%= button_to "削除する",address_path(a), method: :delete ,class: "btn btn-danger" %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>