<div class="col-md-12">
  <%= form_with (model:address, :url => {:controller => "public/addresses"}) do |f| %>
    <div class="form-group col-md-12">
      <%= f.label :"郵便番号（ハイフンなし）", class: "col-md-3" %>
      <%= f.text_field :postal_code, class: "col-md-4" %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label :"住所", class: "col-md-3" %>
      <%= f.text_field :address, class: "col-md-4" %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label :"氏名", class: "col-md-3" %>
      <%= f.text_field :name, class: "col-md-4" %>
    </div>
  <% end %>  
</div>