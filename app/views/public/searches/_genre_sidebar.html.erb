<div class="genre_search">
  <table class="table">
    <tr>
      <th>ジャンル検索</th>
    </tr>
    <%= form_with url: genre_search_path, method: :get do |f| %>
      <% genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get, class:"text-decoration-none text-dark" %>
          </td>
        </tr>  
      <% end %>
    <% end %>  
  </table>
</div>