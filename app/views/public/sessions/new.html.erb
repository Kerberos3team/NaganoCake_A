<div class="container">
  <div class="row">
    <h2 class="col mt-4">ログイン</h2>
    <hr class="heading-line">
  </div>
  <div class="row">
    <h3 class="col mt-4">会員の方はこちらからログイン</h3>
  </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="bg-orange col-12 col-lg-8 mx-auto">
        <div class="col-12">
          <div class="col-12">
            <table class="form-new border-none table table-borderless mx-auto mt-4">
              <tr>
                <th><%= f.label :メールアドレス %></th>
                <td><%= f.email_field :email, class: "form-control mx-auto",style: "width:80%", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></td>
              </tr>
              <tr>
                <th><%= f.label :パスワード %></th>
                <td><%= f.password_field :password, class: "form-control mx-auto",style: "width:80%", autocomplete: "current-password" %></td>
              </tr>
            </table>
          </div>
          <div class="col-3 mx-auto">
            <div class="actions">
              <%= f.submit "ログイン", class: "btn" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>


  <div class="container">
    <div class="row">
      <h3 class="col mt-5">会員登録がお済みでない方</h3>
    </div>
    <div class="bg-orange row justify-content-center">
      <%= link_to "こちら", new_customer_registration_path, class: "text-green" %>から新規会員登録を行ってください。
    </div>
  </div>

</div>

