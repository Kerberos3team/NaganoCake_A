<div class="container px-1 py-2">
  <%= render 'layouts/errors', obj: @customer %>
  <div class="row">
    <h2 class="col mt-4">新規会員登録</h2>
  </div>
  <div class="bg-orange row">
    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <table class="form-new table table-borderless mt-4 mx-auto">
        <tr>
          <th>名前</th>
          <td class="text-left">(姓)</td>
          <td><%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: "form-control" %></td>
          <td class="text-left">(名)</td>
          <td><%= f.text_field :first_name, placeholder: "道子", class: "form-control" %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td class="text-left">(セイ)</td>
          <td><%= f.text_field :last_name_kana, placeholder: "レイワ", class: "form-control" %></td>
          <td class="text-left">(メイ)</td>
          <td><%= f.text_field :first_name_kana, placeholder: "ミチコ", class: "form-control" %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td></td>
          <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td></td>
          <td><%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <th>住所</th>
          <td></td>
          <td colspan="3"><%= f.text_field :address,:size=>"60", placeholder: "東京都渋谷区代々木神薗町0-0", class: "form-control" %></td>
        </tr>
        <tr>
          <th>電話番号（ハイフンなし）</th>
          <td></td>
          <td><%= f.text_field :telephone_number, placeholder: "0000000000", class: "form-control" %></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <th>
            パスワード
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
          </th>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <th>パスワード（確認用）</th>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td>
            <div class="active">
              <%= f.submit "新規登録", class: "btn btn-success w-50 " %>
            </div>
          </td>
          <td colspan="2"></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
    <h2 class="col mt-5">既に登録済みの方</h2>
  <div class="container">
    <div class="bg-orange row justify-content-center">
      <%= render "public/shared/links" %> <p>からログインしてください。</p>
    </div>
  </div>
</div>

