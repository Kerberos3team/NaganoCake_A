<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <p>名前</p>
  <div class="field">
    <%= f.label :"(姓)" %><br />
    <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
  </div>
  
  <div class="field">
    <%= f.label :"(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
  </div>
  
  <p>フリガナ</p>
  <div class="field">
    <%= f.label :"(セイ)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
  </div>
  
  <div class="field">
    <%= f.label :"(メイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>
  
  <div class="field">
    <%#時間あったら郵便番号で検索のやつ入れる？%>
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autofocus: true, placeholder: "000000" %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神薗町0-0" %>
  </div>
  
  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %><br />
    <%= f.text_field :telephone_number, autofocus: true, placeholder: "0000000000" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
  <p><%= render "public/shared/links" %>からログインしてください。</p>

