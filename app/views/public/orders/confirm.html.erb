<div class="container py-3">
  <h1 class="mx-auto">注文情報確認</h1>
  <!--注文詳細-->
  <div class="row">
    <div class="col-8">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.image, size: '48x27', style: "object-fit: cover;" %><%= cart_item.item.name %>
                <%= cart_item.item.name %>
              </td>
              <td>
                ￥<%= number_with_precision(cart_item.item.with_tax_price, precision: 0, delimiter: ',') %>
              </td>
              <td>
                <%= cart_item.amount %>
              </td>
              <td>
                ￥<%= number_with_precision(cart_item.subtotal, precision: 0, delimiter: ',') %>
              </td>
            </tr>
            <% @total_price += cart_item.subtotal %>
          <% end %>
        </tbody>
      </table>
    </div>

    <!--金額-->
    <div class="col-4">
      <table class="table table-hover">
        <tr>
          <td class="table-secondary">合計金額</td>
          <td>￥<%= number_with_precision(@total_price, precision: 0, delimiter: ',') %></td>
        </tr>
        <tr>
          <td class="table-secondary">送料</td>
          <td>￥<%= @shipping_cost %></td>
        </tr>
        <tr>
          <td class="table-secondary">お支払い金額</td>
          <td>￥<%= number_with_precision(@total_price + SHIPPING_COST, precision: 0, delimiter: ',') %></td>
        </tr>
      </table>
    </div>
  </div>

  <h2>支払方法</h2>
  <%= @order.payment_method_i18n %>

  <h2>お届け先</h2>
  <p>
    <%= @order.address %><br>
    <%= @order.name %>
  </p>

  <%= form_with model: @order_new, url: '/orders' do |f| %>
    <%= f.hidden_field :customer_id, value: current_customer.id %>
    <%= f.hidden_field :postal_code, value: @order.postal_code %>
    <%= f.hidden_field :address, value: @order.address %>
    <%= f.hidden_field :name, value: @order.name %>
    <%= f.hidden_field :shipping_cost, value: @shipping_cost %>
    <%= f.hidden_field :total_payment, value: @total_price + SHIPPING_COST %>
    <%= f.hidden_field :payment_method, value: @order.payment_method %>
    <%= f.hidden_field :status, value: "waiting" %>
    <%= f.submit '注文を確定する', class: "btn btn-info" %>
  <% end %>
</div>