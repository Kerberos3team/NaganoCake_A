<div class="container">
  <div class="d-flex flex-column">

    <h1>注文情報入力</h1>
    <div>
      <!--後でenumの日本語化の記述を反映させる-->
      <%= form_with model: @order, url: '/orders/confirm' do |f| %>
        <h2>支払方法</h2>
        <div class="row d-flex flex-column">
          <div class="col">
            <%= f.radio_button :payment_method, "credit_card" %>
            <%= f.label :payment_method, "クレジットカード" %>
          </div>
          <div class="col">
            <%= f.radio_button :payment_method, "transfer" %>
            <%= f.label :payment_method, "銀行振込" %>
          </div>
        </div>
      </div>

      <div>
        <h2>お届け先</h2>
        <div class="row d-flex flex-column">
          <div class="col mb-4">
            <%= f.radio_button :select_address, 0 %>
            <%= f.label :address, "ご自身の住所" %>
            <div>
              〒 <%= current_customer.postal_code %>
              <%= current_customer.address %><br>
              <%= current_customer.last_name %> <%= current_customer.first_name %>
            </div>
          </div>
          <div class="col">
            <%= f.radio_button :select_address, 1 %>
            <%= f.label :address, "登録済み住所から選択" %>
            <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
          </div>
          <div class="col">
            <%= f.radio_button :select_address, 2 %>
            <%= f.label :address, "新しいお届け先" %>
            <div>
              <div>
                <%= f.label :postal_code, "postal_code" %>
                <%= f.text_field :postal_code, placeholder: "0000000" %>
              </div>
              <div>
                <%= f.label :address, "address" %>
                <%= f.text_field :address, placeholder: "東京都渋谷区代々木神薗町0-0" %>
              </div>
              <div>
                <%= f.label :name, "name" %>
                <%= f.text_field :name, placeholder: "令和道子" %>
              </div>
            </div>
            <%= f.submit '確認画面へ進む', class: "btn btn-info" %>
            </div>
        </div>
      </div>
    <% end %>

　</div>
</div>