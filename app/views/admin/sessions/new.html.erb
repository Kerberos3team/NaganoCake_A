<div class="container">
  <div class="row">
    <h2 class="col mt-4">管理者ログイン</h2>
    <hr class="heading-line">
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="bg-orange row">
      <div class="col-12 mx-auto">
        <div class="col-12">
          <table class="form-new border-none table table-borderless mx-auto mt-4">
            <tr>
              <th><%= f.label :メールアドレス %></th>
              <td><%= f.email_field :email, class: "form-control",style: "width:80%", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></td>
            </tr>
            <tr>
              <th><%= f.label :パスワード %></th>
              <td><%= f.password_field :password, class: "form-control ",style: "width:80%" ,autocomplete: "current-password" %></td>
            </tr>
          </table>
        </div>
        <div class="col-3 mx-auto">
          <div class="actions">
            <%= f.submit "ログイン", class: "btn" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

