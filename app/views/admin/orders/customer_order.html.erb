<div class="container">
  <div class="row">
    <!--並び順を新しい順にする-->
    <h1><%= @customer.full_name %>さんの注文履歴一覧</h1>
    <table class="table table-bordered">
      <thead>
        <tr class="table-secondary text-center">
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td class=" text-center">
            <%= link_to(admin_order_path(order.id), class: "text-info") do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            <% end %>
          <td class=" text-center">
           <%= order.order_details.group(:order_id).sum(:amount).values.first %> 個
          </td>
          <td class=" text-center">
            <%= order.status_i18n %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders, theme: 'bootstrap-5' %>
  </div>

</div>

<!--ページネーションがいる-->