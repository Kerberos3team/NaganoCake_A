<div class="container">
  <div class="row">
    <h1><%= @customer.full_name %>さんの注文履歴一覧</h1>
    <table class="table table-bordered">
      <thead>
        <tr class="table-secondary text-center">
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td class=" text-center">
            <%= link_to(admin_order_path(order.id), class: "text-info") do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            <% end %>
          <td class=" text-center">
           <%= order.order_details.group(:order_id).sum(:amount).values.first %> 個
          </td>
          <td class=" text-center">
            <%= order.status_i18n %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row">
      <div class="col text-center m-4">
        <%= link_to_prev_page @orders, '戻る', class: "paginate py-2 px-4" %>
        <%= link_to_next_page @orders, '次へ', class: "paginate py-2 px-4" %>
      </div>
    </div>
  </div>

</div>
