<div class="container">
  <div class="row">
    <h1>さんの履歴一覧</h1>
    <table class="table table-hover">
      <thead>
        <tr class="table-secondary">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to(admin_order_path(order.id), class: "text-muted") do %>
              <%= order.created_at.strftime('%Y/%m/%d') %></td>
            <% end %>
          <td>
              <%= order.customer.full_name %>
          </td>
          <td>
              <%= order.customer.full_name %>
          </td>
          <td>
              <%= order.status_i18n %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
