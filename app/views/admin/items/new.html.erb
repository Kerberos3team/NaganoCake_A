<div class="container p-2">
  <h2>商品新規登録</h2>
  <%= form_with model: @item, local: true do |f| %>
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="form-group">
          <%= f.label :image, "商品画像" %>
          <%= f.file_field :image %>
        </div>

        <div class="form-group">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name, placeholder: "商品名", size: "30", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "商品説明" %>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", :cols => 30, :rows => 5, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :price, "税抜価格" %>
          <%= f.text_field :price, placeholder: "1000", size: "30", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "販売ステータス" %>
          <%= f.radio_button :status, :true, checked: true %>
          <%= f.label :status, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :status, :false %>
          <%= f.label :status, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        </div>

      </div>

    </div>
    <div class="d-grid col-2 mx-auto">
      <%= f.submit "新規登録", class: "py-2 px-4 btn btn-success submit-btn" %>
    </div>
  <% end %>

</div>
