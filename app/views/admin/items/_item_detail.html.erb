<div class="mt-4 d-flex justify-content-center">
  <div class="p-4">
    <%= image_tag item.image, size: '200x200' %>
  </div>
  <div>
    <table class="table">
      <tr>
        <td>商品名</td>
        <td><%= item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格<br>(税抜価格)</td>
        <td><%= item.with_tax_price %>円<br>(<%= item.price %>円)</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <% if item.is_active %>
            <div class="text-success">販売中</div>
          <% else %>
            <div class="text-secondary">販売停止中</div>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
