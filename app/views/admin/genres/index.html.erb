<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <div class="">ジャンル名</div>
  <%= f.text_field :name, class: "genre-text-field" %>
  <%= f.submit "新規登録", class: "submit-btn" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td></td>
      </tr>
    <% end %>
  </tbody>
</table>

