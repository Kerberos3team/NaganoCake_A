<div class="container px-1 py-2">
  <%= render 'layouts/errors', obj: @genre %>
  <h2>ジャンル一覧・追加</h2>
  <hr class="heading-line">
  <div class="bg-gray">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <div class="row py-5 mx-auto">
        <div class="col-12 col-md-8 form">
          <%= f.label "ジャンル名", class: "form-label font-weight-bold" %>
        </div>
          <%= f.text_field :name, class: "form-control genre-text-field ml-3" %>
        <div class="col-12 col-md-4 mt-4">
        <%= f.submit "新規登録", class: "btn submit-btn ml-3" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row text-center">
    <table class="col-lg-6 table mx-auto">
      <thead>
        <tr  class="table-secondary text-center">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>