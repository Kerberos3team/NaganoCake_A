<div class="container px-1 py-2">
  <%= render 'layouts/errors', obj: @genre %>
  <h2>ジャンル一覧・追加</h2>

  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <div class="row py-5">
      <div class="form">
        <%= f.label "ジャンル名", class: "form_label" %>
        <%= f.text_field :name, class: "form_control genre-text-field ml-5" %>
      </div>
      <%= f.submit "新規登録", class: "btn btn-success submit-btn ml-5" %>
    </div>
  <% end %>

  <div class="row text-center">
    <table class="col-lg-6 table table-hover">
      <thead>
        <tr  class="table-secondary text-center">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>